<Project>
  <PropertyGroup>
    <!-- Declare that this is a public repo -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-62903-02" PrivateAssets="all" />
    <PackageReference Include="Microsoft.SourceLink.VSTS.Git" Version="1.0.0-beta-62903-02" PrivateAssets="all" />
  </ItemGroup>

  <PropertyGroup>
    <!-- Workaround for not having NuGet symbol server yet -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <PackageOutputPath>$(MSBuildThisFileDirectory)out</PackageOutputPath>
  </PropertyGroup>
</Project>